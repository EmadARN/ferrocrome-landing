datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model FormSubmission {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phoneNumber  String
  companyName  String
  saleType     String   // radio button
  message      String
  fileUrl      String?  // آپلود فایل (اختیاری)
  createdAt    DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
}
