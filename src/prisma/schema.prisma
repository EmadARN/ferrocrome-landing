datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FormSubmission {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phoneNumber  String
  companyName  String
  saleType     String   // radio button
  message      String
  fileUrl      String?  // آپلود فایل (اختیاری)
  createdAt    DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
}

model Blog {
  id          Int       @id @default(autoincrement())
  title       String
  summary     String
  image       String?
  category    String
  content     String   // خروجی HTML از ریچ ادیتور
  author      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  comments    Comment[]  // رابطه با کامنت‌ها
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  author    String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    Int
}
